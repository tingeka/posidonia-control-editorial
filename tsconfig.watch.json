// tsconfig.watch.json
{
  "extends": "10up-toolkit/config/default-tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowUmdGlobalAccess": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "watchOptions": {
    "excludeDirectories": ["node_modules", "dist"],
    "excludeFiles": ["**/*.d.ts"]
  },
  "include": ["assets/js/**/*", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
